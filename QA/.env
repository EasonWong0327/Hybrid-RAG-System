# ====================
# 环境变量配置模板
# ====================

# 基础配置
ENVIRONMENT=development
DEBUG=true

# API配置
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# LLM模型配置
LLM_MODEL_NAME=Qwen/Qwen3-4B
LLM_DEVICE=cuda
LLM_MAX_LENGTH=2048
LLM_TEMPERATURE=0.7

# 对话管理
MAX_HISTORY_TURNS=20
SESSION_TIMEOUT=3600

# 缓存配置
CACHE_ENABLED=true
CACHE_MAX_SIZE=10000
CACHE_DEFAULT_TTL=1800

# Redis配置（可选）
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# ElasticSearch配置
ES_HOST=localhost
ES_PORT=9200
ES_USERNAME=
ES_PASSWORD=

# 安全检测
TOXICITY_DETECTION_ENABLED=true
HALLUCINATION_DETECTION_ENABLED=true
FACT_VERIFICATION_ENABLED=true

# 性能监控
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_WINDOW_SIZE=1000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true

# 特性开关
FEATURE_ADVANCED_DIALOGUE=true
FEATURE_SMART_DST=true
FEATURE_CONTEXT_AWARE_RETRIEVAL=true
FEATURE_INTELLIGENT_CACHE=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_SAFETY_DETECTION=true